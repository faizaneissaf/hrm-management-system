@model HrManagementSystem.Models.Attendance

@{
    ViewBag.Title = "Guard_CheckIn";
    Layout = "~/Views/Shared/_LayoutGuard.cshtml";
}

@{
    var user_d = (List<HrManagementSystem.Models.User>)ViewData["user_data"]; // Cast the list
}


<body>

    <div class="card shadow-2-strong " style="border-radius: 1rem;">
        <div class="card-body text-center">
            @foreach (var item in user_d)
            {
                <img class="rounded-circle" src="~/Profiles/@item.image" width="200px" height="200px" />
                <br />
                <br />
                <h4>@item.f_name @item.l_name</h4>
                <br />
                <h4>@item.contact_no</h4>
            }
        </div>
    </div>

    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            @using (Html.BeginForm("Guard_CheckIn", "Guard", FormMethod.Post))
                            {
                                <center>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="">Check In Time</label>
                                        @Html.EditorFor(model => model.checkin, "time", new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="">Check In Date</label>
                                        @Html.EditorFor(model => model.date, "date", new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>


                                    <button class="btn btn-primary btn-lg btn-block col-lg-5" type="submit">Check In</button>

                                    <hr class="my-4">
                                </center>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
