@model HrManagementSystem.Models.Job
@{
    ViewBag.Title = "Hr_AddJobs";
    Layout = "~/Views/Shared/_LayoutHr.cshtml";
}

<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            @using (Html.BeginForm("Hr_AddJobs", "Hr", FormMethod.Post))
                            {
                                <center>
                                    <h3 class="mb-5">Add Job</h3>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="">Title</label>
                                        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="">Qualification</label>
                                        @Html.DropDownListFor(model => model.qualification, new SelectList(new[]
{
 new { Value = "Matric", Text = "Matric" },
 new { Value = "Inter", Text = "Inter" },
 new { Value = "Bachelor", Text = "Bachelor" },
 new { Value = "Master", Text = "Master" }
}, "Value", "Text"), new { @class = "form-control form-control-lg" })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="">Salary</label>
                                        @Html.EditorFor(model => model.salary, "number", new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="">Experience</label>
                                        @Html.EditorFor(model => model.experience, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="">Last Date To Apply</label>
                                        @Html.EditorFor(model => model.last_date_to_apply, "date", new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="">Location</label>
                                        @Html.EditorFor(model => model.location, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="">Description</label>
                                        @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="">Total Vaccencies</label>
                                        @Html.EditorFor(model => model.vaccencies, "number", new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>

                                    <button class="btn btn-primary btn-lg btn-block col-lg-5" type="submit">Save</button>

                                    <hr class="my-4">
                                </center>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

