@model HrManagementSystem.Models.Committe
@{
    ViewBag.Title = "Hr_AddCommettie";
    Layout = "~/Views/Shared/_LayoutHr.cshtml";
}

<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            @using (Html.BeginForm("Hr_AddCommettie", "Hr", FormMethod.Post))
                            {
                                <center>
                                    <h3>Commettie Title</h3>
                                    <div class="form-outline mb-4">
                                        @Html.EditorFor(model => model.comm_title, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>

                                    <button class="btn btn-primary btn-lg btn-block col-lg-5" type="submit">Add</button>
                                </center>
                                    <hr class="my-4">
                                
                                    }

                            </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>


