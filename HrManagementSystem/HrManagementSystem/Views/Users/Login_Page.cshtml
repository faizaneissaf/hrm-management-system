@model HrManagementSystem.Models.User

@{
    ViewBag.Title = "Login_Page";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<body style="background-color: #508bfc;">
    <section class="vh-100" style="background-color: #508bfc;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <h3 class="mb-5">Sign in</h3>

                            @using (Html.BeginForm("Login_Page", "Users"))
                            {
                                <center>
                                    <div class="form-outline mb-4">
                                        <label class="form-label">Email</label>
                                        @*<input type="email" asp-for="email" name="email" class="form-control form-control-lg" />*@
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control form-control-lg" } })

                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label">Password</label>
                                        @*<input type="password" asp-for="password" name="password" class="form-control form-control-lg" />*@
                                        @Html.EditorFor(model => model.password,"password", new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>

                                </center>
                                <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                    Don't have an account?&nbsp;&nbsp;@Html.ActionLink("Register here", "Signup_Page")
                                </p>
                                @*<a asp-controller="Users" asp-action="Signup_Page" style="color: #393f81;">Register here</a>*@

                                <button class="btn btn-primary btn-lg btn-block col-lg-5" type="submit">Login</button>

                                <hr class="my-4">

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>


